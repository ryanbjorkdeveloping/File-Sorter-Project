{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "java",
            "name": "Launch SortRunner",
            "request": "launch",
            "mainClass": "SortRunner",
            "cwd": "${workspaceFolder}",
            "classPaths": [
                "${workspaceFolder}/build"
            ],
            "vmArgs": "--module-path \"${workspaceFolder}/lib\" --add-modules javafx.controls,javafx.fxml --enable-native-access=javafx.graphics -Dprism.order=sw -Djava.library.path=\"${workspaceFolder}/javafx-bin\"",
            "env": {
                "PATH": "${workspaceFolder}/javafx-bin;${env:PATH}"
            },
            "preLaunchTask": "Build SortRunner"
        }
    ]
}